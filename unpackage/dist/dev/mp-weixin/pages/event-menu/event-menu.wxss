
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}
.page-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}
.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}
.page-subtitle {
  font-size: 28rpx;
  color: #666;
}
.feature-cards {
  margin-bottom: 60rpx;
}
.feature-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.card-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}
.card-content {
  flex: 1;
}
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.card-desc {
  font-size: 24rpx;
  color: #666;
}
.card-arrow {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}
.stats-section {
  margin-bottom: 60rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}
.stats-grid {
  display: flex;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.stat-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 16rpx;
  border-right: 2rpx solid #f0f0f0;
}
.stat-item:last-child {
  border-right: none;
}
.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
}
.stat-label {
  font-size: 24rpx;
  color: #666;
}
.recent-section {
  margin-bottom: 40rpx;
}
.activity-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.activity-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f8f9fa;
}
.activity-item:last-child {
  border-bottom: none;
}
.activity-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.activity-icon.event {
  background: #fff2f0;
  color: #fa541c;
}
.activity-icon.venue {
  background: #f6ffed;
  color: #52c41a;
}
.activity-icon.referee {
  background: #f0f5ff;
  color: #1890ff;
}
.activity-icon.simulation {
  background: #fff7e6;
  color: #fa8c16;
}
.activity-content {
  flex: 1;
}
.activity-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.activity-time {
  font-size: 24rpx;
  color: #999;
}
